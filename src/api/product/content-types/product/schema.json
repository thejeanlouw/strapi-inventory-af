{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "images": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "splash_image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "stock": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "supplier_info": {
      "type": "json"
    },
    "release_date": {
      "type": "datetime"
    },
    "Price": {
      "type": "float"
    },
    "Cost": {
      "type": "float"
    },
    "slug": {
      "type": "string"
    },
    "product_id": {
      "type": "uid",
      "targetField": "slug"
    }
  }
}
